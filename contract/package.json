{
  "name": "v4-template",
  "version": "1.0.0",
  "description": "Uniswap V4 Hook Template",
  "type": "module",
  "scripts": {
    "create-pool": "tsx shortcut/pure-hook/01-createPoolAndAddLiquidity.ts",
    "add-liquidity": "tsx shortcut/pure-hook/02-addLiquidity.ts",
    "swap": "tsx shortcut/pure-hook/03-swap.ts",
    "check-data": "tsx shortcut/pure-hook/04-checkHookData.ts",
    "circuit:compile": "cd circuit && nargo compile",
    "circuit:test": "cd circuit && nargo test",
    "circuit:check": "cd circuit && nargo check",
    "circuit:fmt": "cd circuit && nargo fmt",
    "circuit:verifier": "cd circuit && make verifier",
    "circuit:deploy": "node circuit/deploy-verifier.js",
    "circuit:withdraw": "node circuit/src/withdraw.js"
  },
  "dependencies": {
    "@aztec/bb.js": "0.87.0",
    "@noir-lang/noir_js": "1.0.0-beta.9",
    "circomlibjs": "^0.1.7",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "fixed-merkle-tree": "^0.7.3",
    "poseidon-lite": "^0.2.0",
    "snarkjs": "^0.7.6"
  },
  "devDependencies": {
    "@types/circomlibjs": "^0.1.6",
    "@types/node": "^22.10.2",
    "@types/snarkjs": "^0.7.9",
    "solc": "^0.8.28",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
